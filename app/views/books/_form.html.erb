<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2>Ошибка!</h2>
      <ul>
		    <% @book.errors.full_messages.each do |msg| %>
		      <li><%= msg %></li>
		    <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= 'Автор:' %><br />
    <%= f.text_field :autor %>
  </div>
  <div class="field">
    <%= 'Навание:' %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= 'Цена:' %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= 'Описание:' %><br />
   <%= f.text_area :description, :size => "70x10"%> 
  </div>
	<div class="field">
    <%= 'Наличие:' %>
    <%= f.check_box :available %>
  </div>
   <% if @book.title == nil %>
    <%= f.submit 'Создать', :class => "button_grid" %>
<%else%>
    <%= f.submit 'Сохранить', :class => "button_grid" %>
<%end%> 
<% end %>
